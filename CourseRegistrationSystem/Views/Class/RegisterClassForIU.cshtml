
@{
    ViewBag.Title = "RegisterClassForIU";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Class", "Index", "Class")</li>
    <li>@ViewBag.CourseClass.ClassId</li>
</ul>

<h2>@ViewBag.CourseClass.ClassId Class Registration</h2>

<h4>@ViewBag.CourseClass.Course.CourseTitle</h4>

<p>
    @ViewBag.CourseClass.Course.CourseDescription
</p>

<p>Fee: @ViewBag.CourseClass.Course.Fee</p>
<p>Duration: @ViewBag.CourseClass.Course.NumberOfDays days</p>
<p>Start Date: @ViewBag.CourseClass.StartDate.ToString("yyyy-MM-dd") & End Date: @ViewBag.CourseClass.EndDate.ToString("yyyy-MM-dd")</p>

<div class="panel panel-default">
    <div class="panel-heading" data-toggle="collapse" data-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
        <h3 class="panel-title">Step1: Participant Details</h3>
    </div>
    <div class="collapse in" id="collapse1">
        <div class="panel-body">
            @Html.Partial("CreateParticipant")
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
        <h3 class="panel-title">Step2: Bill Details</h3>
    </div>
    <div class="collapse in" id="collapse2">
        <div class="panel-body">
            @Html.Partial("CreateBilling");
        </div>
    </div>
</div>


<hr />
<nav>
    <ul class="pager">
        @*<li class="previous"><a href="#"><span aria-hidden="true">&larr;</span> Previous</a></li>*@
        <li class="next"><a href="#">Register</a></li>
    </ul>
</nav>