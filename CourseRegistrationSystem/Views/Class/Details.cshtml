@model CourseRegistration.Models.CourseClass

@{
    ViewBag.Title = "Details";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Class", "Index", "Class")</li>
    <li>@Html.DisplayFor(model => Model.ClassId)</li>
</ul>

<h2>@Model.ClassId Class <small>for @Model.Course.CourseTitle</small></h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isOpenForRegister)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isOpenForRegister)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
    @if (Request.IsAuthenticated)
    {
        if (User.IsInRole("IndividualUser"))
        {
            @Html.ActionLink("Register", "RegisterClassForIU", new { classId = Model.ClassId }, new { @style="float:right"})
        }
        else
        {
            @Html.ActionLink("Register", "RegisterClassForHR", new { classId = Model.ClassId }, new { @style="float:right"})
        }
    }
    else
    {
        @Html.ActionLink("Register", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    }
</p>
