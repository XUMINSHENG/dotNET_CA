    <h3>@Html.ActionLink(item.CourseTitle, "Details", "Course", new { code = item.CourseCode }, new { })</h3>
    @if (item.CourseDescription == null || item.CourseDescription == "")
    {
        <p>The description of this course is nothing now.</p>
    }
    else
    {
        @Html.DisplayFor(modelItem => item.CourseDescription)
    }
    <p>Fee: @Html.DisplayFor(modelItem => item.Fee)</p>
    <p>Duration: @Html.DisplayFor(modelItem => item.NumberOfDays)</p>
       
    
