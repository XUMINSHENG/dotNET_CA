@model CourseRegistration.Models.Category

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home","Index","Home")</li>
    <li>@Html.ActionLink("Course","Index","Course")</li>
    <li>@Html.DisplayFor(model => Model.CategoryName)</li>
</ul>

<h3 style="text-transform:uppercase;">@Model.CategoryName</h3>

<p>
    @{
        if (Model.CategoryDescription.IsEmpty())
        {
            @("The content is coming soon!");
        }
        else
        {
            Html.DisplayFor(model => Model.CategoryDescription);
        }
    }
</p>

<h3>COURSES LIST</h3>

<div class="list-group">
    @foreach (var item in Model.Courses)
    {
        @Html.ActionLink(item.CourseTitle, "Details", "Course", new { id = item.CourseCode}, new { @class = "list-group-item" })
    }
</div>